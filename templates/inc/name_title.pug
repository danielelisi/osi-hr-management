.d-flex.flex-column.w-50
    h1 #{user.firstName} #{user.lastName}
        if user.customJobCode && user.customLevel
            span.badge.badge-info.ml-2 #{user.customJobCode}#{user.customLevel}
    if user.jobTitle
        h4.text-muted #{user.jobTitle}
.w-50
    .d-flex.justify-content-between.align-items-center
        .w-20.align-middle
            label.text-dark-blue.mb-0 PDP Period: 
        .w-80
            form#get-goal-period.d-flex(method='GET', action='/view')
                .w-80
                    select#period-select.form-control(name='period')
                .w-15
                    button.btn.btn-primary.ml-2(type='submit')
                        i.fa.fa-search.fa-lg.mr-1(aria-hidden='true')
                        | View